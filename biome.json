{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"bracketSpacing": true,
		"useEditorconfig": true,
		"ignore": ["src/components/ui/**/*.tsx", "**/*.json"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["src/components/ui/**/*.tsx", "**/*.json"],
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useValidAnchor": "off",
				"useButtonType": "off",
				"noRedundantAlt": "warn",
				"useKeyWithMouseEvents": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"noParameterAssign": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noPrototypeBuiltins": "warn",
				"noImplicitAnyLet": "warn",
				"noArrayIndexKey": "warn"
			},
			"complexity": {
				"noForEach": "warn",
				"noBannedTypes": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"assists": {
		"enabled": true
	}
}
